{
  "name": "whisper-dictation-desktop",
  "version": "0.1.0",
  "description": "Electron desktop app for Whisper Dictation using Python core",
  "main": "main.js",
  "scripts": {
    "dev": "ELECTRON_DISABLE_SECURITY_WARNINGS=true electron .",
    "build": "electron-builder -m",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.example.whisperdictation",
    "mac": {
      "category": "public.app-category.productivity",
      "target": ["dmg"],
      "hardenedRuntime": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "This app needs microphone access for dictation."
      }
    }
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "electron-store": "^9.0.0"
  }
}

